@model IEnumerable<AcademicosUem.Models.TrabalhoFiles>

@{
    ViewBag.Title = "Index";
}

<div class="row col-md-12">
    <div class="input-field col s6">
        <input placeholder="Pesquisar" id="first_name" type="text" class="validate">
    </div>
    <a href="/trabalhoes/create" class="waves-effect waves-light btn"><i class="material-icons">backup</i> Submeter Documento</a>
    </div>
  
@foreach (var item in Model)
            {
    <div class="card white darken-1">
        <div class="card-content">
            <span class="card-title">@Html.DisplayFor(modelItem => item.Trabalho.Titulo)</span>
            <p>
            <p>Tipo de documento: @Html.DisplayFor(modelItem => item.CatFiles.Designacao)</p>
            <p>Supervisor: @Html.DisplayFor(modelItem => item.Data)</p>
            <p>Nivel Academico: @Html.DisplayFor(modelItem => item.Trabalho.Grau_Academico)</p>
            <p>Data de Subissao: @Html.DisplayFor(modelItem => item.Data)</p>
            <p>Estado do documento: @Html.DisplayFor(modelItem => item.EstadoTrabalhoFile.Designacao)</p>
            </p>
        </div>
        @if (Roles.IsUserInRole("Estudante"))
        {
            <div class="card-action">
                <a href="#">Ler Documento</a>
                <a href="#">Remover Documento</a>
            </div>

        }
        @if (Roles.IsUserInRole("RA"))
        {
            <div class="card-action">
                <a href="#">Aprovar Documento</a>
                <a href="#">Reprovar Documento</a>
            </div>

        }
    </div>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Trabalho.ApplicationUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trabalho.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trabalho.Grau_Academico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            Estado
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}


