@model IEnumerable<AcademicosUem.Models.TrabalhoFiles>

@{
    ViewBag.Title = "Index";
}
@if (Roles.IsUserInRole("Estudante"))
{
<div class="row col-md-12">
    <div class="input-field col s6">
        <input placeholder="Pesquisar" id="first_name" type="text" class="validate">
    </div>
    <a href="/trabalhoes/create" class="waves-effect waves-light btn"><i class="material-icons">backup</i> Submeter Documento</a>
    </div>
}

<div class="col s12 m6 l6">
    <div class="card card-transparent">
        <div class="card-content">
            <span class="card-title">Preselecting a tab</span>
            Here is an example of preselected tab.
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <ul class="tabs tab-demo z-depth-1" style="width: 100%;">
                <li class="tab col s3"><a href="#test5" class="active">Teses Recentes</a></li>
                <li class="tab col s3"><a href="#test6" class="">Defesas Agendadas</a></li>
                <li class="tab col s3"><a href="#test8" class="">Protocolos Recentes</a></li>
                <div class="indicator" style="right: 243px; left: 0px;"></div>
            </ul>
        </div>
        <div id="test5" class="col s12" style="display: block;">
            @foreach (var item in Model)
            {
                <div class="card white darken-1">
                    <div class="card-content">
                        <span class="card-title">@Html.DisplayFor(modelItem => item.Trabalho.Titulo)</span>
                        <p>
                        <p>Tipo de documento: @Html.DisplayFor(modelItem => item.CatFiles.Designacao)</p>
                        <p>Supervisor: @Html.DisplayFor(modelItem => item.Data)</p>
                        <p>Nivel Academico: @Html.DisplayFor(modelItem => item.Trabalho.Grau_Academico)</p>
                        <p>Data de Subissao: @Html.DisplayFor(modelItem => item.Data)</p>
                        <p>Estado do documento: @Html.DisplayFor(modelItem => item.EstadoTrabalhoFile.Designacao)</p>
                        </p>
                    </div>
                        <div class="card-action">
                            <a href="/trabalhofiles/AprovarDoc/@item.Id">Agendar Defesa</a>
                        </div>
                </div>
            }
        </div>
        <div id="test6" class="col s12" style="display: none;">
            @foreach (var item in Model)
            {
                <div class="card white darken-1">
                    <div class="card-content">
                        <span class="card-title">Tema:@Html.DisplayFor(modelItem => item.Trabalho.Titulo)</span>
                        <p>
                        <span class="card-title">@Html.DisplayFor(modelItem => item.Trabalho.ApplicationUser.UserName)</span>
                        <p><b>Tipo de documento:</b>Informatica @*@Html.DisplayFor(modelItem => item.Trabalho.Appli)*@</p>
                        <p><b>Tipo de documento:</b> @Html.DisplayFor(modelItem => item.CatFiles.Designacao)</p>
                        <p><b>Supervisor:</b> @Html.DisplayFor(modelItem => item.Data)</p>
                        <p><b>Nivel Academico: </b>@Html.DisplayFor(modelItem => item.Trabalho.Grau_Academico)</p>
                        <p><b>Data de Subissao:</b>@Html.DisplayFor(modelItem => item.Data)</p>
                        <p><b>Estado do documento:</b> @Html.DisplayFor(modelItem => item.EstadoTrabalhoFile.Designacao)</p>
                        </p>
                    </div>
                    <div class="card-action">
                        <a href="/trabalhofiles/AprovarDoc/@item.Id">Adiar Defesa</a>
                        <a href="/trabalhofiles/AprovarDoc/@item.Id">Cancelar Defesa</a>
                        <a href="/trabalhofiles/AprovarDoc/@item.Id">Defesa Realizada</a>
                    </div>
                </div>
            }
        </div>
        <div id="test7" class="col s12" style="display: none;"><p class="p-v-sm">Test 3</p></div>
        <div id="test8" class="col s12" style="display: none;"><p class="p-v-sm">Test 4</p></div>
    </div>
</div>



