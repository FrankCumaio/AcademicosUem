@model IEnumerable<AcademicosUem.Models.TrabalhoFiles>

@{
    ViewBag.Title = "ListaTrabalhos";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}

    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Add your site or application content here -->
        <!-- Header Area Start Here -->
      
        <!-- Header Area End Here -->
        <!-- Inner Page Banner Area Start Here -->
        <div class="inner-page-banner-area" style="background-image: url('../../Content/assetsFront/img/slider/salaestudo2.jpg');">
            <div class="container">
                <div class="pagination-area">
                    <h2>Encontre aqui os melhores trabalhos!</h2>
                    <ul>
                        <li><a href="#">Home</a> -</li>
                        <li>ListaTrabalho</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Inner Page Banner Area End Here -->
        <!-- Courses Page 1 Area Start Here -->
        <div class="courses-page-area1">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12 col-md-push-3">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="courses-page-top-area">
                                    <div class="courses-page-top-left">
                                        <p ><input placeholder="Pesquisar por trabalhos.."  style="text-align: center; width: 100%; border-radius: 5px;" id="searchTodos" type="text" class="search-form"> </p>
                                        
                                    </div>
                                    <div class="courses-page-top-right">
                                        <ul>
                                            <li class="active"><a href="#gried-view" id="btVerTodos" style="background: rgba(16,92,34,0.96); color: white; padding: 10px; font-weight: 100;" aria-expanded="false">Ver todos</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active listaTrabalhos">
                                  
                                    <ul class="live-search-list">
                                        @foreach (var item in Model)
                                        {

                                            <li class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                                                <div class="courses-box1">
                                                    <div class="single-item-wrapper">
                                                        <div class="courses-img-wrapper hvr-bounce-to-bottom">
                                                            <img class="" style="height: auto !important" height="50" src="~/img/pdffoto.png" alt="courses">
                                                            @Html.ActionLink("Ver", "DetalhesTrabalho", new { id = item.Id })
                                                        </div>
                                                        <div class="courses-content-wrapper">
                                                            <h3 class="item-title"><a href="#">Informatica</a></h3>
                                                            <p class="item-content"><b>Tema: </b>@Html.DisplayFor(modelItem => item.Trabalho.Titulo)</p>
                                                            <hr />
                                                            <p><b>Data: </b>@Html.DisplayFor(modelItem => item.Data)</p>
                                                            <p><b>Autor: </b>@Html.DisplayFor(modelItem => item.Trabalho.ApplicationUser.UserName)</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <ul class="pagination-left">
                                    <li class="active"><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 col-md-pull-9">
                        <div class="sidebar">
                            
                            <div class="sidebar-box">
                                <div class="sidebar-box-inner">
                                    <h3 class="sidebar-title">Pesquise por cursos</h3>
                                    <ul class="sidebar-categories">
                                        <li><a href="#" class="cursoList">Informatica</a></li>
                                        <li><a href="#" class="cursoList">Matematica</a></li>
                                        <li><a href="#" class="cursoList">Estatistica</a></li>
                                        <li><a href="#" class="cursoList">Ciencias de Informacao Geografica</a></li>
                                       
                                    </ul>
                                </div>
                            </div>
                          
                      
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Courses Page 1 Area End Here -->
        <!-- Footer Area Start Here -->
      
        <!-- Footer Area End Here -->
