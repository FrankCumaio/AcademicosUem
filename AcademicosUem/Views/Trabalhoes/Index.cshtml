@model IEnumerable<AcademicosUem.Models.Trabalho>

@{
    ViewBag.Title = "Index";
}
<div class="row card">
    <div class="col s12 card-content">
        <div class="col s12 m12 l12">
            <span class="card-title">Trabalhos Submetidos</span>
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table id="example" class="display responsive-table datatable-example">
                <thead>
                    <tr>
                        <th>Autor</th>
                        <th>Titulo do Trabalho</th>
                        <th>Nivel</th>
                        <th>Data de Registo</th>
                        <th>Estado do Trabalho</th>
                        <th>Operacoes</th>
                    </tr>
                </thead>
              
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Grau_Academico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Data)
                            </td>
                            <td>
                                Estado
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
        @section Scripts {


            <script src="~/Content/assets/js/pages/table-data.js"></script>
        }
