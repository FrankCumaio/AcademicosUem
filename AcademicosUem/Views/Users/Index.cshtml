@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="panel panel-default panel-table">

        <form action="#" method="get">
            <div class="input-group">
                <input class="form-control" id="system-search" name="q" placeholder="Pesquisar" required>
                <span class="input-group-btn">
                    <button type="button" class="btn btn-sm btn-primary btn-create">Create New</button>
                </span>
            </div>
        </form>
        <table class="table table-striped table-bordered table-list-search">
            <thead>
                <tr>
                    <th><em class="fa fa-cog"></em></th>
                    <th class="hidden-xs">User Name</th>
                    <th>Email</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                }
                @foreach (var users in Model.users)
                {
                    <tr>
                        <td align="center">
                            <a class="btn btn-default"><em class="fa fa-pencil"></em></a>
                            <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                        </td>

                        <td>@users.UserName</td>
                        <td>@users.Email</td>
                        <td>
                            @Model.roles[i]

                        </td>
                        
                    </tr>
                    i++;
                }


            </tbody>
        </table>
    </>
</div>

