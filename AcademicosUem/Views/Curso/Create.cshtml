@model AcademicosUem.Models.Curso

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutSecundary.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Curso</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Area_conhecimento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @{
                    var listaAreaConhecimento = new List<SelectListItem>();
                    listaAreaConhecimento.Add(new SelectListItem
                    {
                        Text = "Ciencias Agronomicas",
                        Value = "Ciencias Agronomicas"
                    });

                    listaAreaConhecimento.Add(new SelectListItem
                    {
                        Text = "Ciencias Biologicas",
                        Value = "Ciencias Biologicas"
                    });

                    listaAreaConhecimento.Add(new SelectListItem
                    {
                        Text = "Ciencias da Saude",
                        Value = "Ciencias da Saude"
                    }); listaAreaConhecimento.Add(new SelectListItem
                    {
                        Text = "Ciencias Humanas",
                        Value = "Ciencias Humanas"
                    }); listaAreaConhecimento.Add(new SelectListItem
                    {
                        Text = "Ciencias Naturais e Exactas",
                        Value = "Ciencias Naturais e Exactas"
                    }); listaAreaConhecimento.Add(new SelectListItem
                    {
                        Text = "Ciencias Sociais e Aplicadas",
                        Value = "Ciencias Sociais e Aplicadas"
                    }); listaAreaConhecimento.Add(new SelectListItem
                    {
                        Text = "Engenharias",
                        Value = "Letras e Artes"
                    });
                }

                @Html.DropDownListFor(model => model.Area_conhecimento, listaAreaConhecimento, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Area_conhecimento, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
