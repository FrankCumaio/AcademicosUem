<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Academicos UEM</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/materializeIcons")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/js")


</head>
<body>

    <!--Navigation-->
    <div class="navbar navbar navbar-fixed-top"  style="height: 210px; background-color: rgba(91, 79, 79, .90) !important;">
        <nav id="nav_f" class="default_color" role="navigation" style="background-color: rgba(74, 64, 64, .98) !important;">
            <div class="">
                <div class="nav-wrapper" style="margin-left: 60px; margin-right: 10px;">
                    <a href="/" id="logo-container" class="brand-logo">Academicos MZ</a>
                    <ul class="right hide-on-med-and-down">
                        <li><a href="#work">@Html.ActionLink("Inicio", "Index", "Trabalho")</a></li>
                        <li><a href="#team">Minha conta</a></li>
                 
                    </ul>

                    <ul id="nav-mobile" class="side-nav">
                        <li><a href="#work">@Html.ActionLink("Inicio", "Index", "Trabalho")</a></li>
                        <li><a href="#team">Minha conta</a></li>

                    </ul>

                    <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
                   
                </div>

            </div>

        </nav>
        <div class="container center no-pad-bot col s4" id="searchBoxDiv" style="margin-top: 20px;">
            <div class="input-field col m12" id="searchfield">
                <input id="icon_prefix" name="name" type="text" class="validate white black-text center" placeholder="Pesquise por trabalhos, temas, etc..">
                <button id="btPesquisa" class="btn darken-1" type="submit" style="height: 47px;">Pesquisar</button>
            </div>
        </div>
    </div>

  



