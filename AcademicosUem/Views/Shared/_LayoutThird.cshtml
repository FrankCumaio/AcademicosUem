<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Academicos UEM</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/materializeIcons")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/js")


</head>
<body>

    <!--Navigation-->
    <div class="navbar navbar navbar-fixed-top" id="navDiv1"  style="background-color: rgba(91, 79, 79, .90) !important;">
        <nav id="nav_f" class="default_color" role="navigation" style="background-color: rgba(74, 64, 64, .98) !important;">
            <div class="">
                <div class="nav-wrapper" style="margin-left: 60px; margin-right: 10px;">
                    <a href="/" id="logo-container" class="brand-logo">Academicos MZ</a>
                    <ul class="right hide-on-med-and-down">
                        <li><a href="#work">@Html.ActionLink("Inicio", "Index", "Trabalho")</a></li>
                        <li><a href="#work">@Html.ActionLink("Trabalhos", "Todos", "Trabalho")</a></li>
                        @Html.Partial("_LoginPartial")
                 
                    </ul>

                    <ul id="nav-mobile" class="side-nav">
                        <li><a href="#work">@Html.ActionLink("Inicio", "Index", "Trabalho")</a></li>
                        <li><a href="#work">@Html.ActionLink("Trabalhos", "Todos", "Trabalho")</a></li>
                        @Html.Partial("_LoginPartial")

                    </ul>

                    <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
                   
                </div>

            </div>

        </nav>
    </div>

    <div class="renderBody1">
        @RenderBody()
        <!--Footer-->
        <footer id="contact" class="page-footer default_color scrollspy">
            <div class="container">
                <div class="row">


                    <div class="col l3 s12">
                        <h5 class="white-text">Siga-nos</h5>
                        <ul>
                            <li>
                                <a class="white-text" href="https://www.facebook.com/">
                                    <i class="small fa fa-facebook-square white-text"></i> Facebook
                                </a>
                            </li>
                     
                            <li>
                                <a class="white-text" href="https://www.google.com">
                                    <i class="small fa fa-google-plus-square white-text"></i> Google +
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="col l3 s12">
                        <h5 class="white-text">Contacte Nos</h5>
                        <ul>
                            <li>
                                <span class="white-text">
                                    E-mail:
                                    <a class="white-text" href="">
                                        academicosmz@info.com
                                    </a>
                                </span>
                            </li>
                            <li>
                                <span class="white-text">
                                    Telefone:
                                    <a class="white-text">
                                        842584654
                                    </a>
                                </span>
                            </li>
                            <li>
                                <span class="white-text">
                                    Telefone:
                                    <a class="white-text">
                                        842586454
                                    </a>
                                </span>
                            </li>
                        </ul>
                    </div>

                    <div class="col l3 s12">
                        <h5 class="white-text">Sobre Nós</h5>
                        <ul>
                            <li>
                                <a class="white-text" href="">
                                    Saiba quem somos
                                </a>

                            </li>
                        </ul>

                    </div>
                </div>
            </div>
            <div class="footer-copyright default_color">
                <div class="container">
                    Developed by Inercio Belton & Frank Cumaio
                </div>
            </div>


        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    
    <script>
        $(document).ready(function () {
            $('.collapsible').collapsible({
                accordion: false // A setting that changes the collapsible behavior to expandable instead of the default accordion style
            });
        });

    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
