    <div class="section scrollspy" id="divTrabalho">
        <div class="row">
            <div class="container offset-m3">
                <div class="col m12 m4 l4">
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator" src="~/img/pdf.png">
                        </div>
                        <div class="card-content">
                            <span class="card-title text_h2 activator grey-text text-darken-4">@Html.DisplayFor(model => model.Titulo) .pdf<i class="mdi-navigation-more-vert right"></i></span>
                        </div>
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4">@Html.DisplayFor(model => model.Titulo) <i class="mdi-navigation-close right"></i></span>
                            <p></p>
                        </div>
                    </div>
                </div>
                <div class="container col m8 m4">
                    <br />
                    <br />
                    <div style="margin-left: 50px;">
                        <h5 style="margin-bottom: 20px;"><span class="span_h2">Titulo:</span> <small style="color: black"> @Html.DisplayFor(model => model.Titulo) </small></h5>
                        <h5 style="margin-bottom: 20px;"><span class="span_h2">Autor:</span><small style="color: black">  @Html.DisplayFor(model => model.Titulo) </small></h5>
                        <h5 style="margin-bottom: 20px;"><span class="span_h2">Data de publicacao:</span> <small style="color: black"> @Html.DisplayFor(model => model.Data_Publicacao) </small></h5>
                        <h6><span class="span_h2">Tags: </span> @Html.DisplayFor(model => model.Area.Nome), @Html.DisplayFor(model => model.Area.Curso.Nome)</h6>
                    </div>

                    <div class="row" style="margin-top: 50px; margin-left:10px;">
                        <button class="btn green darken-1" type="button" style="height: 47px; width:250px; margin-bottom: 10px;">Ler todo documento</button>
                        <button class="btn blue darken-1" type="button" style="height: 47px; width:250px; margin-bottom: 10px;">Adicionar aos favoritos</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container offset-l3">
            <h4 class="text_h2" style="margin-bottom: 0px;">Descricao</h4>
            <hr />
            <p style="font-size: 15px;">
                @Html.DisplayFor(model => model.Descricao)
            </p>
        </div>
    </div>

    <div class="row">
   
        @foreach (var item in ViewBag.trabalhosRelacionados)
        {
            
                <div class="col s12 m4 l4">
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator" src="~/img/pdf.png">
                        </div>
                        <div class="card-content">
                            <span class="card-title text_h2 activator grey-text text-darken-4">@Html.DisplayFor(modelItem => modelItem.Titulo)<i class="mdi-navigation-more-vert right"></i></span>
                            <p class="linkDetalhes">@Html.ActionLink("Ver detalhes", "Details", new { id = item.Id })</p>
                        </div>
                        <div class="card-reveal">
                            <span class="card-title text_h2 grey-text text-darken-4">@Html.DisplayFor(modelItem => modelItem.Titulo)<i class="mdi-navigation-close right"></i></span>
                            <p>@Html.DisplayFor(modelItem => modelItem.Descricao)</p>
                        </div>
                    </div>
                </div>
        }

    </div>


